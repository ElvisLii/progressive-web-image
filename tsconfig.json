{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
    "baseUrl": ".",
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "baseUrl": ["."],
      "@utils/*": ["./utils"]
    }
  },
  "exclude": [
    "build",
    "dist",
    "out",
    "lib",
    "examples",
    "*.config.js"
  ]
}
{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "baseUrl": ["."],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
}